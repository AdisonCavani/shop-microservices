{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Settings": {
    "ReverseProxy": {
      "Routes": {
        "ProductService_Create": {
          "ClusterId": "ProductService",
          "AuthorizationPolicy": "admin-required",
          "Order": 1,
          "Match": {
            "Path": "api/product",
            "Methods": [ "POST" ]
          },
          "Transforms": [
            {
              "PathPattern": "api/product"
            }
          ]
        },
        "ProductService": {
          "ClusterId": "ProductService",
          "AuthorizationPolicy": "anonymous",
          "Order": 2,
          "Match": {
            "Path": "api/product/{**catch-all}"
          },
          "Transforms": [
            {
              "PathPattern": "api/product/{**catch-all}"
            }
          ]
        },
        "OrderService_Orders": {
          "ClusterId": "OrderService",
          "AuthorizationPolicy": "authentication-required",
          "Match": {
            "Path": "api/order/{**catch-all}"
          },
          "Transforms": [
            {
              "PathPattern": "api/order/{**catch-all}"
            }
          ]
        },
        "OrderService_Payments": {
          "ClusterId": "OrderService",
          "AuthorizationPolicy": "authentication-required",
          "Match": {
            "Path": "api/payment/{**catch-all}"
          },
          "Transforms": [
            {
              "PathPattern": "api/payment/{**catch-all}"
            }
          ]
        },
        "OrderService_PaymentWebhook": {
          "ClusterId": "OrderService",
          "AuthorizationPolicy": "anonymous",
          "Match": {
            "Path": "/api/payment/webhook"
          },
          "Transforms": [
            {
              "PathPattern": "/api/payment/webhook"
            }
          ]
        },
        "NotificationService": {
          "ClusterId": "NotificationService",
          "AuthorizationPolicy": "admin-required",
          "Order": 2,
          "Match": {
            "Path": "api/notification/{**catch-all}"
          },
          "Transforms": [
            {
              "PathPattern": "api/notification/{**catch-all}"
            }
          ]
        }
      },
      "Clusters": {
        "ProductService": {
          "Destinations": {
            "destination1": {
              "Address": "https://localhost:7100"
            }
          }
        },
        "OrderService": {
          "Destinations": {
            "destination1": {
              "Address": "https://localhost:7150"
            }
          }
        },
        "NotificationService": {
          "Destinations": {
            "destination1": {
              "Address": "https://localhost:7200"
            }
          }
        }
      },
      "Swagger": {
        "ProductService": {
          "Endpoint": "/swagger/product-service/v1/swagger.json",
          "Spec": "https://localhost:7100/swagger/v1/swagger.json",
          "OriginPath": "/api/product",
          "TargetPath": "/api/product"
        },
        "OrderService": {
          "Endpoint": "/swagger/order-service/v1/swagger.json",
          "Spec": "https://localhost:7150/swagger/v1/swagger.json",
          "OriginPath": "/api",
          "TargetPath": "/api"
        },
        "NotificationService": {
          "Endpoint": "/swagger/notification-service/v1/swagger.json",
          "Spec": "https://localhost:7200/swagger/v1/swagger.json",
          "OriginPath": "/api/notification",
          "TargetPath": "/api/notification"
        }
      }
    }
  }
}
